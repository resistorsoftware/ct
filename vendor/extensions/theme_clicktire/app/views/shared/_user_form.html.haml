#password-credentials{:style => "#{password_style(@user)}"}
  - f.inputs do
    = f.input :email, :label => t("email")
    = f.input :password, :label => t("password"), :as => :password
    = f.input :password_confirmation, :label => t("password_confirmation", :default => "Confirmation"), :as => :password

= hook :signup_below_password_fields

- if Spree::Config[:allow_openid]
  #openid-credentials{:style =>"#{openid_style(@user)}"}
    - f.inputs do
      = f.input :openid_identifier, :label => t('OpenID', :default => 'OpenID'), :input_html => {:class => 'openid_url'}

- if Spree::Config[:allow_openid]
  %p#enable_login_via_openid{:style =>"#{password_style(@user)}"}
    %a{:href => '#'}= t :enable_login_via_openid
  %p#enable_login_via_login_password{:style => "#{openid_style(@user)}"}
    %a{:href => '#'}= t :enable_login_via_login_password
  = javascript_include_tag 'open_id'
