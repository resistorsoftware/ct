#filter-box
  %ul.titles
    %li
      %h2= current_taxon
      %br
      %span Search Results for:
    %li
      %strong Your Vehicle:
      %br
      %span.vehicle-year
      %span.vehicle-make
      %span.vehicle-model
      
    -# Are we on Wheel or Tires... can make a difference what we show... 
    - if current_taxon == 'Wheels'
      %li
        %strong Wheel Info:
        %br
        %span.psg-wheel
        %script{:type => "text/html", :id => "wheelTemplate"}
          %div.wheel-data
            .bolt-pattern Bolt Pattern: <%=bolt_pattern%>
            .offset Offset: <%=offset%>
            .hub Hub: <%=hub%>
            .lug Lug: <%=lug%>
    - if current_taxon == 'Tires'
      %script{:type => "text/html", :id => "tireTemplate"}
        .psg-tire <%=size%>
      %li
        %strong OEM Tire Sizes:
        %br
        %span.oem-sizes
      %li
        %strong Plus Tire Sizes:
        %br
        %span.plus-sizes
  
  %form{:id => "dropdowns", :method => "post", :action =>""}
    %ul.dropdowns
      %li             
        %label{:for => 'selectYear'} Year:
        %select{:name => 'selectYear', :id => 'selectYear'}
          %option{:value => 0} Select Year
      %li
        %label{:for => 'selectMake'} Make:
        %select{:name => 'selectMake', :id => 'selectMake'}
      %li
        %label{:for => 'selectModel'} Model:
        %select{:name => 'selectModel', :id => 'selectModel'}