#filter-box
  %ul.titles
    %li
      %h2= current_taxon
      %br Search Results for:
    %li
      %strong Your Vehicle:
      %br
      %span.your-vehicle
    -# Are we on Wheel or Tires... can make a difference what we show... 
    - if current_taxon == 'Wheels'
      %li
        %strong Wheel Info:
        %br
        %span.psg-wheel my wheel
    - if current_taxon == 'Tires'    
      %li
        %strong OEM Tire Sizes:
        %br
        %span.oem-sizes oem sizes ...
      %li
        %strong Plus Tire Sizes:
        %br
        %span.plus-sizes plus sizes ...
  
  %form{:id => "dropdowns", :method => "post", :action =>""}
    %ul.dropdowns
      %li             
        %label{:for => 'selectYear'} Year:
        %select{:name => 'selectYear', :id => 'selectYear'}
          %option{:value => 0} Select Year
      %li
        %label{:for => 'selectMake'} Make:
        %select{:name => 'selectMake', :id => 'selectMake'}
      %li
        %label{:for => 'selectModel'} Model:
        %select{:name => 'selectModel', :id => 'selectModel'}