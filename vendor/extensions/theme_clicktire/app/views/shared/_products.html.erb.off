<%
  paginated_products = Spree::Config.searcher.products if params.key?(:keywords) 
  paginated_products ||= products
  
%>
<% if products.empty? %>
  <%= t(:no_products_found) %>
<% end %>
 
<% if products.any? %>
<div id="results_sheet">
<form class="results">
  <% products.each do |product| %>   
         <div id="product_<%= product.id%>" class="item">
            <div class="thumb"> </div>
            <div class="description">
              <ul>
                <li>
                  <h2><strong><%= product.name %></strong></h2>
                </li>
                <li>
                  <strong>Size:</strong>
                </li>
                <li>
                  <strong>Serv. Desc.</strong>
                </li>
                <li>
                  <strong>Speed Rating</strong>
                </li>
                <li>
                  <strong>Performance</strong>
                </li>
              </ul>
              <ul class="price">
                <li>
                  <h3>
                    <strong>$999.99</strong> each
                  </h3>
                </li>
              </ul>
            </div>
         
         </div>           
        
  <% end %>
  </form>
</div>

<% end %>

<div style="clear:both">&nbsp;</div> 
<hr class="space" />
 
<% if paginated_products.respond_to?(:total_pages)
      params.delete(:search)
      params.delete(:taxon)
      
%><%= will_paginate(paginated_products,
                    :previous_label => "&#171; #{t('previous')}",
                    :next_label => "#{t('next')} &#187;") %>
<% end -%>
 
<hr class="space" />
