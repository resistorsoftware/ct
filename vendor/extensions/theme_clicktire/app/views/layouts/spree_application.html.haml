!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title=  t('site_tagline')
    %meta{'http-equiv' => 'Content-Type', 'content' => "text/html;charset=UTF-8"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "http://fonts.googleapis.com/css?family=Inconsolata"}
    - hook :inside_head do
      = render :partial => 'shared/head'
  %body{:class => "#{@body_id}"}
    #root
      %div{:class => "#{@content_for_sidebar.nil? ? 'one-col' : 'two-col'}"}
        #header
          %a{:href => '/'}
            .logo
              %h1 Clicktire
          .navigation  
            %ul#nav-bar
              = render 'shared/nav_bar'
            = render 'shared/language_bar' if Spree::Config[:allow_locale_switching]
          #menubar
            %ul
              %li
                %a{:href=>"/"}= t('home')
              %li
                %a{:href=>"/t/wheels"}= t('wheels')
              %li
                %a{:href=>"/t/tires"}= t('tires')
          #search_box
            %ul
              %li
                - form_tag products_url, :method => :get do
                  = text_field_tag :keywords, params[:keywords]
                  = tag("button", {:value => t(:search), :name => nil, :type=>'submit'}) 

        #sidebar
          - if @content_for_sidebar
            - hook :sidebar do
              = yield :sidebar
          %h2.sb01 Tires &
          %h2.sb02 wheels
          %h2.sb03 across Canada
          %h3.shipping Shipping across Canada
          %h3.install We also install at our facility
          %a{:href=>"rates"} Get installation rates
          %ul.address
            %li
              %img{:src=>"/images/gmap"}
            %li
              %p 1320 Rue Gay Lussac #100
              %p Boucherville
              %p QC J4B 7G4- if @content_for_sidebar
          
        #content
          -#= breadcrumbs(@taxon) if @taxon
          - if flash[:notice]
            .flash.notice= flash[:notice]
          - if flash[:error]
            .flash.errors= flash[:error]
          = yield 
        #root_footer
    = render :partial => 'shared/footer'