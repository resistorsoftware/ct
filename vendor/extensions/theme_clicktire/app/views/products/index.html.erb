<% content_for :sidebar do %> 
<h1>Sidebar DAVE</h1>
  <% hook :homepage_sidebar_navigation do %>
    <% if "products" == @current_controller && @taxon %>
      <%= render "shared/filters" %>
    <% else %>
      <%= render "shared/taxonomies" %>
    <% end %>
  <% end %>
<% end %>


<% if params[:keywords] %>
<h1>KEYWORDS DAVE _ SHOW RESULTS</h1>
  <h1><%= t(:search_results, :keywords => h(params[:keywords])) %></h1>
  <% hook :search_results do %>
    <% if @products.empty? %>
      <%= t(:no_products_found) %>
    <% else %>
      <%= render "shared/products", :products => @products, :taxon => @taxon %>
    <% end %>
  <% end %>

<% else %>
  <h1>I am PLAIN NEW HOMEPAGE<h1>
  <<% hook :homepage_product do %>
     <%= render "shared/products", :products => @products, :taxon => @taxon %>
   <% end %> 


<% end %>

